{% extends _tenant['mi-config']['views-namespace'] ~ "::template.index" %}

{% block section_body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body no-padding">
                    <div class="table-responsive no-margin">
                        <table class="table table-striped no-margin">
                            <thead>
                            <tr>
                                <th>{% include _tenant['mi-config']['views-namespace'] ~ "::template.interface.icons.ssl" %} {{ trans_choice('management-interface::ssl.ssl',1) }}</th>
                                <th>{% include _tenant['mi-config']['views-namespace'] ~ "::template.interface.icons.hostname" %} {{ trans_choice('management-interface::hostname.hostname',2) }}</th>
                                <th>{% include _tenant['mi-config']['views-namespace'] ~ "::template.interface.icons.expiry" %} {{ trans('management-interface::ssl.invalidates_at') }}</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for certificate in certificates %}
                                <tr>
                                    <td>
                                        <code>{{ certificate.id }}</code>
                                    </td>
                                    <td>
                                        {{ certificate.present().hostnamesSummary }}
                                        {% if certificate.present().additionalHostnames > 0 %}
                                            <span class="badge">{{ trans('management-interface::generic.n-more', {'n': certificate.present().additionalHostnames}) }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {{ certificate.present().expiry }}
                                    </td>
                                    <td class="text-right">
                                        {% include _tenant['mi-config']['views-namespace'] ~ "::template.interface.buttons.view" with {'size': 'xs', 'href': route('management-interface@website@read', website.present().urlArguments)} %}
                                        {% include _tenant['mi-config']['views-namespace'] ~ "::template.interface.buttons.update" with {'size': 'xs', 'href': route('management-interface@website@update', website.present().urlArguments)} %}
                                        {% include _tenant['mi-config']['views-namespace'] ~ "::template.interface.buttons.delete" with {'size': 'xs', 'href': route('management-interface@website@delete', website.present().urlArguments)} %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-center">
                                        {{ certificates.render()|raw }}
                                    </td>
                                    <td class="text-right">
                                        {% include _tenant['mi-config']['views-namespace'] ~ "::template.interface.buttons.add" with {
                                            'modal': '#add-website-form'
                                        } %}
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% include _tenant['mi-config']['views-namespace'] ~ "::ssl.forms.add-certificate" %}
{% endblock %}