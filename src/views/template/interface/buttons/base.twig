{% if elm|default(false) is sameas(false) %}
    {% if href|default(false) %}
        {% set elm = "a" %}
    {% else %}
        {% set elm = "button" %}
    {% endif %}
{% endif %}

<{{ elm }}
    class="btn btn-{{ color|default('default') }}
        {%- if size %} btn-{{ size }}{% endif -%}
        {%- if reaction|default(true) %} ink-reaction{% endif -%}
        {%- if flat|default(false) %} btn-flat{% endif -%}
        {%- if raised|default(false) %} btn-raised{% endif -%}
        {%- if block|default(false) %} btn-block{% endif -%}
        {%- if floating_action|default(false) %} btn-floating-action{% endif -%}
        {%- if icon_toggle|default(false) %} btn-icon-toggle{% endif -%}
        "
        {% if href|default(false) %}href="{{ href|default("#") }}"{% endif %}
        {% if target|default(false) %}target="{{ target }}"{% endif %}
        {% if tooltip|default(false) %}data-tooltip="{{ tooltip }}"{% endif %}
        >
        {% if ":" in icon %}{% include icon %}{% elseif icon|default(false) %}{{ icon }}{% endif %}
        {% if ":" in label %}{{ trans(label) }}{% elseif label|default(false) %}{{ label}}{% endif %}
</{{ elm }}>